{
  "title": "Other Document Form Schema",
  "description": "Schema for miscellaneous document upload form fields",
  "formId": "other-form",
  "documentType": "other",
  "hideHeader": true,
  "showFormButtons": false,
  "fields": [
    {
      "id": "certificateAbbreviation",
      "name": "certificateAbbreviation",
      "type": "text",
      "label": "Document Title",
      "placeholder": "Enter document title",
      "required": true,
      "order": 1,
      "fullWidth": true
    },
    {
      "id": "customType",
      "name": "customType",
      "type": "text",
      "label": "Custom Document Type",
      "placeholder": "Enter document type",
      "required": true,
      "order": 2,
      "fullWidth": true
    },
    {
      "id": "category",
      "name": "category",
      "type": "select",
      "label": "Category",
      "placeholder": "Select category",
      "options": [
        {"value": "personal", "label": "Personal"},
        {"value": "professional", "label": "Professional"},
        {"value": "financial", "label": "Financial"},
        {"value": "educational", "label": "Educational"},
        {"value": "insurance", "label": "Insurance"},
        {"value": "legal", "label": "Legal"},
        {"value": "other", "label": "Other"}
      ],
      "required": false,
      "order": 3,
      "fullWidth": true
    },
    {
      "id": "issuer",
      "name": "issuer",
      "type": "text",
      "label": "Issuer",
      "placeholder": "Enter issuer name",
      "required": false,
      "order": 4,
      "fullWidth": true
    },
    {
      "id": "recipient",
      "name": "recipient",
      "type": "text",
      "label": "Recipient",
      "placeholder": "Enter recipient name",
      "required": false,
      "order": 5,
      "fullWidth": true
    },
    {
      "id": "documentId",
      "name": "documentId",
      "type": "text",
      "label": "Document ID/Reference",
      "placeholder": "Enter document ID or reference",
      "required": false,
      "order": 6,
      "fullWidth": true
    },
    {
      "id": "tags",
      "name": "tags",
      "type": "text",
      "label": "Tags",
      "placeholder": "Enter tags separated by commas",
      "required": false,
      "order": 7,
      "fullWidth": true
    },
    {
      "id": "effectiveDate",
      "name": "effectiveDate",
      "type": "date",
      "label": "Issue Date",
      "placeholder": "Select issue date",
      "required": false,
      "order": 8,
      "fullWidth": true
    },
    {
      "id": "expirationDate",
      "name": "expirationDate",
      "type": "date",
      "label": "Expiry Date",
      "placeholder": "Select expiry date",
      "required": false,
      "order": 9,
      "fullWidth": true,
      "validation": {
        "afterField": "effectiveDate",
        "maxMonths": 6,
        "message": "Expiration date must be after issue date and within 6 months of it"
      }
    },
    {
      "id": "notes",
      "name": "notes",
      "type": "textarea",
      "label": "Notes",
      "placeholder": "Enter any additional information",
      "required": false,
      "order": 10,
      "fullWidth": true,
      "rows": 3
    },
    {
      "id": "fileUpload",
      "name": "fileUpload",
      "type": "file",
      "label": "Upload Document (PDF, JPG, PNG)",
      "accept": ".pdf,.jpg,.jpeg,.png",
      "required": true,
      "order": 11,
      "fullWidth": true
    },
    {
      "id": "shareable",
      "name": "shareable",
      "type": "checkbox",
      "label": "Shareable",
      "defaultValue": true,
      "required": false,
      "order": 12,
      "fullWidth": true
    },
    {
      "id": "public",
      "name": "public",
      "type": "checkbox",
      "label": "Public Document",
      "defaultValue": false,
      "required": false,
      "order": 13,
      "fullWidth": true
    }
  ],
  "submitButtonText": "Add",
  "cancelButtonText": "Cancel",
  "deleteButtonText": "Delete",
  "successMessage": "Document uploaded successfully!",
  "errorMessage": "There was an error uploading your document. Please try again."
} 