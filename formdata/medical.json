{
  "title": "Medical Record Form Schema",
  "description": "Schema for medical record upload form fields",
  "formId": "medical-form",
  "documentType": "medical",
  "hideHeader": true,
  "showFormButtons": false,
  "fields": [
    {
      "id": "certificateAbbreviation",
      "name": "certificateAbbreviation",
      "type": "text",
      "label": "Medical Record Title",
      "placeholder": "Enter medical record title",
      "required": true,
      "order": 1,
      "fullWidth": true
    },
    {
      "id": "recordType",
      "name": "recordType",
      "type": "select",
      "label": "Record Type",
      "placeholder": "Select record type",
      "options": [
        {"value": "vaccination", "label": "Vaccination"},
        {"value": "test_result", "label": "Test Result"},
        {"value": "physical", "label": "Physical Examination"},
        {"value": "medical_clearance", "label": "Medical Clearance"},
        {"value": "other", "label": "Other Medical Record"}
      ],
      "required": true,
      "order": 2,
      "fullWidth": true
    },
    {
      "id": "issuer",
      "name": "issuer",
      "type": "text",
      "label": "Issuing Healthcare Provider",
      "placeholder": "Enter healthcare provider name",
      "required": false,
      "order": 3,
      "fullWidth": true
    },
    {
      "id": "recipient",
      "name": "recipient",
      "type": "text",
      "label": "Patient Name",
      "placeholder": "Enter patient name",
      "required": false,
      "order": 4,
      "fullWidth": true
    },
    {
      "id": "documentId",
      "name": "documentId",
      "type": "text",
      "label": "Medical Record ID",
      "placeholder": "Enter medical record ID",
      "required": false,
      "order": 5,
      "fullWidth": true
    },
    {
      "id": "effectiveDate",
      "name": "effectiveDate",
      "type": "date",
      "label": "Issue Date",
      "placeholder": "Select issue date",
      "required": false,
      "order": 6,
      "fullWidth": true
    },
    {
      "id": "expirationDate",
      "name": "expirationDate",
      "type": "date",
      "label": "Expiration Date (if applicable)",
      "placeholder": "Select expiration date",
      "required": false,
      "order": 7,
      "fullWidth": true,
      "validation": {
        "afterField": "effectiveDate",
        "maxMonths": 6,
        "message": "Expiration date must be after issue date and within 6 months of it"
      }
    },
    {
      "id": "notes",
      "name": "notes",
      "type": "textarea",
      "label": "Additional Notes",
      "placeholder": "Enter any additional information",
      "required": false,
      "order": 8,
      "fullWidth": true,
      "rows": 3
    },
    {
      "id": "fileUpload",
      "name": "fileUpload",
      "type": "file",
      "label": "Upload Medical Record (PDF, JPG, PNG)",
      "accept": ".pdf,.jpg,.jpeg,.png",
      "required": true,
      "order": 9,
      "fullWidth": true
    },
    {
      "id": "shareable",
      "name": "shareable",
      "type": "checkbox",
      "label": "Shareable",
      "defaultValue": true,
      "required": false,
      "order": 10,
      "fullWidth": true
    },
    {
      "id": "confidential",
      "name": "confidential",
      "type": "checkbox",
      "label": "Confidential Record",
      "defaultValue": false,
      "required": false,
      "order": 11,
      "fullWidth": true
    }
  ],
  "submitButtonText": "Add",
  "cancelButtonText": "Cancel",
  "deleteButtonText": "Delete",
  "successMessage": "Medical record uploaded successfully!",
  "errorMessage": "There was an error uploading your medical record. Please try again."
} 